<h1>Entry : <%= @entry.id %></h1>


<div class="container">
  <h3><%= link_to @entry.title, @entry.url %></h3>
  <i>published on <%= @entry.published %> by <%= @entry.author %></i>
  <p>
    <%= @entry.content.html_safe %>
  </p>
</div>

<td><%= link_to 'Go to Feed', entries_path(@entry.feed) %></td>
